<?xml version="1.0" encoding="utf-8" ?>
<prism:PrismApplication
            xmlns:prism="clr-namespace:Prism.DryIoc;assembly=Prism.DryIoc.Forms"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Notes.App">
    <prism:PrismApplication.Resources>   
    <Color x:Key="PrimaryColor"> #009688 </Color>
        <Color x:Key="DarkColor"> #00675b </Color>
        <Color x:Key="AccentColor"> #4caf50 </Color>
        <Color x:Key="PageBackgroundColor"> #FAFAFA </Color>
        <Color x:Key="normalViewColor"> white </Color>
        <Color x:Key="SelectedViewColor"> green </Color>

        <Style TargetType="NavigationPage">
            <Setter Property="BarBackgroundColor" Value="{StaticResource PrimaryColor}" />
            <Setter Property="BarTextColor" Value="White" />
        </Style>
        <Style ApplyToDerivedTypes="True" TargetType="ContentPage">
            <Setter Property="BackgroundColor" Value="{StaticResource PageBackgroundColor}" />

        </Style>
  </prism:PrismApplication.Resources>
</prism:PrismApplication>
